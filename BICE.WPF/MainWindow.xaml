<Window x:Class="BICE.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BICE.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Grid.Row="0" FontSize="15" FontWeight="Regular" Text="Materiel Data" Margin="20,27,0,0" />
        <Button x:Name ="UploadMaterielData" Content="Ajouter CSV" HorizontalAlignment="Left" Margin="28,54,0,0" VerticalAlignment="Top" Click="InsertMaterielData"/>

        <TextBlock Grid.Row="0" FontSize="15" FontWeight="Regular" Text="Ajouter Vehicule" Margin="14,125,6,10" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Immatriculation" Margin="20,153,0,-18" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Nom" Margin="20,184,0,-49" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Numero" Margin="20,220,0,-85" />

        <TextBox x:Name="Immatriculation" VerticalAlignment="Top" Margin="20,166,680,0" Height="18" />
        <TextBox x:Name="Nom" VerticalAlignment="Top" Margin="20,199,680,0" Height="18" />
        <TextBox x:Name="Numero" VerticalAlignment="Top" Margin="20,231,680,0" Height="18" />
        <Button x:Name ="UploadVehicule" Content="Ajouter Vehicule" HorizontalAlignment="Left" Margin="17,260,0,0" VerticalAlignment="Top" Click="InsertVehicule" Width="106"/>

        <TextBlock Grid.Row="0" FontSize="15" FontWeight="Regular" Text="Modifier Vehicule" Margin="179,125,-159,10" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Immatriculation" Margin="185,153,-165,-18" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Nom" Margin="185,184,-165,-49" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Numero" Margin="185,220,-165,-85" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Utilisable" Margin="185,254,-165,-119"/>
        <TextBox x:Name="ImmatriculationModifier" VerticalAlignment="Top" Margin="185,166,515,0" Height="18" />
        <TextBox x:Name="NomModifier" VerticalAlignment="Top" Margin="185,199,515,0" Height="18" />
        <TextBox x:Name="NumeroModifier" VerticalAlignment="Top" Margin="185,231,515,0" Height="18" />
        <CheckBox x:Name="UtilisableModifier" VerticalAlignment="Top" Margin="185,266,515,0" Height="18" />
        <Button x:Name ="UploadUpdateVehicule" Content="Modifier Vehicule" HorizontalAlignment="Left" Margin="185,293,0,0" VerticalAlignment="Top" Click="UpdateVehicule" Width="106"/>


        <TextBlock Grid.Row="0" FontSize="15" FontWeight="Regular" Text="Supprimer Vehicule" Margin="350,125,-330,9" />
        <TextBlock Grid.Row="0" FontSize="10" FontWeight="Regular" Text="Immatriculation" Margin="350,153,-330,-18" />
        <TextBox x:Name="ImmatriculationSupprimer" VerticalAlignment="Top" Margin="350,166,350,0" Height="18" />
        <Button x:Name ="UploadDeleteVehicule" Content="Supprimer Vehicule" HorizontalAlignment="Left" Margin="351,202,0,0" VerticalAlignment="Top" Click="DeleteVehicule" Width="106"/>
    </Grid>
</Window>
